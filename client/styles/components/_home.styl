@import '../_styles'

.home-wrapper
	section, footer
		padding 50px
	h1
		padding 50px 0
	.home-hero
		background-image url("/img/skateboarding2.jpg") 
		background-size cover
		color white
		text-align center
		h1
			padding-bottom 0
		h3
			margin 0 0 50px 0
		button
			margin-bottom 100px
		svg
			lost-column 1
			margin-top 100px
		.logo
			font-size 48px
			margin-bottom 0
		clearfix()
	.home-intro
		background white
		clearfix()
		h1
			text-align center
			color dark-blue
		img
			lost-column 1/2
		.intro-text
			lost-column 1/2
	.home-123
		background grey
		text-align center
		h1
			color dark-blue
		.home-create, .home-admin, .home-judge
			lost-column 1/3
			p
				padding 0 20px
		clearfix()
	.home-quick-sb
		background-image url("/img/competition2.jpg")
		background-size cover
		h1
			text-align center
			color white
		p
			lost-column 2/3
			color white	
		button
			float right
		clearfix()
	.home-signup
		background white
		text-align center
		button
			margin 20px
		clearfix()
	footer
		background muted-grey
		color white
			