@import '../_styles'

.leaderboard
	.leaderboard-wrapper
		lost-column 1
		margin-top 20px
	.leaderboard-winner
		+below($med)
			lost-column 1
			lost-move 0
		lost-column 1/2
		lost-move 1/2
		text-align center
		color blue
		.winner
			text-transform capitalize
			font-size 3em
	.leaderboard-list
		lost-column 1/2
		lost-move -1/2
		+below($med)
			lost-column 1
			lost-move 0
		ul
			&:nth-child(1)
				lost-column 2/10
			&:nth-child(2)
				lost-column 4/10
			&:nth-child(3)
				lost-column 2/10
			+below($med)
				lost-column 1/3
		li
			font-size 18px
			padding 5px 0
			list-style none
			&:nth-child(1)
				font-size 24px
			&:nth-child(2)
				font-weight bold
				
