@import styles

.judge-top
    text-align center
    
.judge-grid
    lost-column 1/3
    text-align center
        
.judge-bot
    clearfix()
    clear both
    .judge-alert
        text-align center
        lost-column 1/3
        lost-move 1/3
        p
            display inline-block
        i
            display inline-block
    button
        float right
        
.judging-button[disabled]
    color epic-grey
    background light-grey 
    border-color @background 
    shadow-level(1)