    //         display inline-block
    //     i
    //         display inline-block
    button
        float right
        
.judging-button[disabled]
    color epic-grey
    background light-grey 
    border-color @background 
    shadow-level(1)

+below($med)
    .judge-round, .judge-time
        display none
    .judge-score
        lost-column 1
        lost-offset none
        padding 0 20% 20px 20%
        
+below($xsmall)
    .judge-container
        background none !important
        shadow-level(0)
  