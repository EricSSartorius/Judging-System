@import styles

.create-event
    h2
        text-align center
    hr
        border 0
        height 1px
        background light-grey
        margin-bottom 40px
    padding 20px
    margin-bottom 30px           
    .create-wrapper
        background light-grey
        padding 20px
        margin-bottom 50px
        lost-column 1
        .min,.sec,.create3
            lost-column 1/2
        div
            padding 15px 0
        +above($small)
            .create1
                lost-column 1/3
                .event-name
                    padding-top 8px
                    margin-top 22px
            .create2
                lost-column 1/3
                .time
                    lost-column 1
                    margin-bottom 10px
                .min,.sec
                    lost-column 1/2
                    display inline-block
            .create3
                lost-column 1/3
                .rounds
                    padding-top 8px
                    margin-top 22px
    .create-new-player
        +above($small)
            lost-column 1/2
        +above($large)
            lost-column 1/4
        padding 20px
        margin 10px 0
        background light-grey
        input
            margin 0
        button
            width 100%
    .create-players-wrapper
        padding 20px 0
        lost-column 1
        margin-bottom 10px
    .create-judges-wrapper
        lost-utility clearfix
        background transparent 
        padding 10px 0
        margin-top 10px
        lost-column 1
    .create-new-judge
        margin 10px 0
        input
            margin 0
        +above($small)
            lost-column 1/2
        +above($large)
            lost-column 1/4   
    .submit-wrapper
        float right
        padding 30px 0
        
.new-judge-container
    position relative
    background light-grey
    padding 20px 
    margin-bottom 20px 
    shadow-level(0)  
    input
        width 100% 
        display block
        margin-bottom 10px 
    button
        width 100%
    