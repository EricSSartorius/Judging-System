@import styles

.create-event .new-judge-container
    background lighten(light-grey, 60%)
    shadow-level(1)
        
.create-wrapper
    div
        padding 5px 0
    padding-bottom 20px

.create-new-player
    display inline-block

.create-players-wrapper
    padding 20px 0
    
.create-judges-wrapper
    background transparent 
    padding 10px 0

.create-new-judge
    display inline-block
    margin 10px
    
.new-judge-container
    text-align center
    position relative
    background light-grey
    padding 20px 
    margin-bottom 20px 
    shadow-level(2)  
    input
        width 100% 
        display block
        margin-bottom 10px 
    button
        width 100%

.submit-wrapper
    float right
    padding 30px 0