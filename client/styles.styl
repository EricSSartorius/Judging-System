        margin-bottom 10px 
    button
        width 100%

.console-container
    position relative
    background light-grey
    padding 20px 
    margin-bottom 20px 
    shadow-level(2)
    
.player-name
    text-align center
    
.judge-grid
    lost-column 1/3
    text-align center
        
.judge-bot
    clearfix()
    clear both
    .judge-alert
        text-align center
        lost-column 1/3
        lost-move 1/3
        p
            display inline-block
        i
            display inline-block
    button
        float right

.btn, button
    display inline-block
    cursor pointer
    background blue
    color #FFF
    text-decoration none
    text-transform uppercase
    padding 5px 15px
    border solid 3px blue
    border-radius 2px
    font-weight 800
    shadow-level(1)
    &:hover
        background @background - 20
        border-color @background
        shadow-level(2)
    &.btn-primary
        background bright-blue
        border-color bright-blue
        color #FFF
        &:hover
            background @background - 40
            border-color @background
    &.btn-deny
        background epic-red
        border solid 3px @background
        &:hover
            background @background - 20
            border-color @background
    &.btn-text
        color blue
        background transparent
        border solid 2px blue
        shadow-level(0)
        &:hover
            background bright-blue
            border-color @background
            shadow-level(1)
    &.btn-invert
        color blue
        background transparent
        border none
        shadow-level(0)
        &:hover
            background none
            color bright-blue
    &.btn-text-dark
        color #FFF
        background transparent
        border solid 2px #FFF
        shadow-level(0)
        &:hover
            background #FFF
            color bright-blue
            border-color @background
            shadow-level(1)
    &.btn-confirmation
        color black
        background green
        border solid 2px @background
        &:hover
            background @background - 20
            border-color @background
    &.btn-cancel
        color #FFF
        background transparent
        border solid 2px #FFF 
        opacity 0.4
        shadow-level(-1)
        &:hover
            background epic-red
            color #FFF
            opacity 1
            shadow-level(2)
            border-color @background
            
